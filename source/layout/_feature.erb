<%= partial "partials/head" %>
    
    <header
      <% if data.page.ledeimg %>
        style="background-image: url('<%= data.page.ledeimg %>')"
      <% end %>
    >
      <h1 class="hed"><%= data.page.title %></h1>
      <% if data.page.dek %>
        <h2 class="dek"><%= data.page.dek %></h2>
      <% end %>
    </header>

    <article class="feature" id="main" role="main">

      <%= yield %>

      <a class="FlattrButton" style="display:none;"
          title="<%= data.page.title || "Scott Kellum" %>"
          data-flattr-uid="ScottKellum"
          data-flattr-category="text"
          data-flattr-popout="0"
          data-flattr-button="compact"
          href="<%= data.page.link %>">
          Flattr <%= data.page.title || "Scott Kellum" %>
      </a>

    </article>
    
<%= partial "partials/foot" %>
