<%= partial "partials/head" %>
    
    <article id="main" role="main">
      <h1><%= data.page.title %></h1>
      <%= yield %>
    </article>
    
    <aside>
      <h2>By Year</h2>
      <ol class="articles-cal">
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to year, blog_year_path(year) %> <span class="count"><%= articles.size %></span></a></li>
        <% end %>
      </ol>
    </aside>
    <footer>
      <ul class="social">
        <li><a href="/feed.xml">Rss</a></li>
        <li><a href="https://twitter.com/scottkellum">Twitter</a></li>
        <li><a href="https://www.facebook.com/scott.kellum">Facebook</a></li>
        <li><a href="mailto:scott@scottkellum.com">Email</a></li>
      </ul>
    </footer>
  </body>
</html>
