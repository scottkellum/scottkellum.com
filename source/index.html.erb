---
title: Scott Kellum
pageable: true
per_page: 10
---
<canvas id="c"></canvas>
<h1>Scott Kellum</h1>
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %></h2>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

<style>
  .nav-toggle {
    background-color: #fff;
    color: #00CBC8;
  }
  canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  h1 {
    z-index: 1;
    position: relative;
  }
</style>
<script>
  var c = document.getElementById('c');
  c.width = c.offsetWidth;
  c.height = c.offsetHeight;

  var s = {};
  s.a = seed();
  s.b = seed();
  s.c = seed();

  ctx = c.getContext('2d');
  ctx.fillStyle = "rgba(255,255,255,.05)";
  ctx.fillRect(0,0,c.width,c.height);
  ctx.fillStyle = "rgba(0,183,180,.5)";

  pixel(Math.round(c.width * 100));

  function seed() {
    return [Math.round(Math.random()*c.width),Math.round(Math.random()*c.height)];
  }

  function pixel(f) {
    for (var j = 0; j < f; j++) {
      for (var i=0 in s) {
        s[i][0] = s[i][0] + Math.round(Math.random()*4) - 2;
        s[i][1] = s[i][1] + Math.round(Math.random()*4) - 2;
        if (s[i][0] > c.width)  { s[i][0] = c.width; }
        if (s[i][0] < 0)       { s[i][0] = 0; }
        if (s[i][1] > c.height) { s[i][1] = c.height; }
        if (s[i][1] < 0)       { s[i][1] = 0; }
        ctx.fillRect(s[i][0],s[i][1],1,1);
      }
    }
  }
</script>
